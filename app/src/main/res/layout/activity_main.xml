<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="328dp"
        android:layout_height="381dp"
        app:srcCompat="@drawable/ic_fitfit_icon_app" />

    <Button
        android:id="@+id/btn_go_select_exercise"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="운동 계획하기" />

    <Button
        android:id="@+id/btn_go_select_exercise2"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="운동 계획표 확인하기" />

    <Button
        android:id="@+id/btn_go_start_exercise"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="운동 시작하기"
        android:textColorLink="#FCF5FD"
        app:iconTint="#826AB1" />


</LinearLayout>